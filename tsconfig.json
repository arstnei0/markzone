{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"types": ["solid-start/env"],
		"baseUrl": "./",
		"paths": {
			"~/*": ["./src/*"],
			"~ui/*": ["./src/component/ui/*"],
			"~lc/*": ["./src/component/logic/*"]
		}
	}
}
